rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isAdmin() {
      return request.auth.token.email IN ['chancellor@ichancetek.com', 'chanceminus@gmail.com'];
    }

    match /userStatus/{userId} {
      allow write: if request.auth != null && request.auth.uid == userId;
      allow read: if isAdmin();
    }

    match /auditLogs/{logId} {
      allow read, write: if isAdmin();
    }

    match /contactFormSubmissions/{submissionId} {
        allow create: if true;
        allow read: if isAdmin();
    }
    
    // Rules for user affirmation interactions
    match /userInteractions/{interactionId} {
      // Allow users to create, update, and delete their own interactions.
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
    }

    // Allow users to query their own interactions.
    match /userInteractions/{document=**} {
      allow list: if request.auth != null && request.query.where.userId == request.auth.uid;
    }


    // Default deny for any other collections to ensure security
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
