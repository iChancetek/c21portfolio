/**
 * @fileOverview Firestore Security Rules for Chancellor Minus - AI Portfolio.
 *
 * Core Philosophy:
 * This ruleset enforces a strict user-ownership model for user profiles and projects,
 * while allowing public read access to venture data. Authorization independence
 * is achieved through data denormalization, avoiding costly `get()` calls.
 *
 * Data Structure:
 * - User profiles: /users/{userId} (owner-only access)
 * - Projects: /users/{userId}/projects/{projectId} (owner-only access)
 * - Ventures: /ventures/{ventureId} (public read, admin-only write - TODO)
 *
 * Key Security Decisions:
 * - User listing is disabled.
 * - Projects are owned by the user whose ID is in the path.
 * - Venture data is publicly readable. Write access to venture data is not yet implemented, but will require role-based authentication.
 *
 * Denormalization for Authorization:
 * - Each project document contains a `userId` field, which is used to enforce
 *   ownership without requiring additional reads.
 *
 * Structural Segregation:
 * - Private user data (profiles, projects) and public venture data are stored
 *   in separate collections to simplify access control.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Checks if the request is authenticated.
     * @returns {boolean} True if the request is authenticated, false otherwise.
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * @description Checks if the authenticated user is the owner of the resource.
     * @param {string} userId The user ID to compare against the authenticated user's ID.
     * @returns {boolean} True if the user IDs match, false otherwise.
     */
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

        /**
     * @description Checks if the authenticated user is the existing owner of the resource.
     *              This combines the ownership check with an existence check to prevent
     *              operations on non-existent documents.
     * @param {string} userId The user ID to compare against the authenticated user's ID.
     * @returns {boolean} True if the user IDs match and the document exists, false otherwise.
     */
    function isExistingOwner(userId) {
      return isOwner(userId) && resource != null;
    }

    /**
     * @description Rules for user profile documents.
     * @path /users/{userId}
     * @allow (create) User 'testuser' with id 'testuser' can create their profile.
     * @allow (get) User 'testuser' with id 'testuser' can read their profile.
     * @allow (update) User 'testuser' with id 'testuser' can update their profile.
     * @allow (delete) User 'testuser' with id 'testuser' can delete their profile.
     * @deny (create) User 'otheruser' with id 'testuser' cannot create the profile.
     * @deny (get) User 'otheruser' with id 'testuser' cannot read the profile.
     * @deny (update) User 'otheruser' with id 'testuser' cannot update the profile.
     * @deny (delete) User 'otheruser' with id 'testuser' cannot delete the profile.
     * @principle Enforces document ownership for all operations on user profiles.
     */
    match /users/{userId} {
      allow get: if isOwner(userId);
      allow list: if false; // User listing is not allowed.
      allow create: if isOwner(userId) && request.resource.data.id == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.id == resource.data.id;
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Rules for project documents nested under user profiles.
     * @path /users/{userId}/projects/{projectId}
     * @allow (create) User 'testuser' with id 'testuser' can create a project under their profile.
     * @allow (get) User 'testuser' with id 'testuser' can read a project under their profile.
     * @allow (update) User 'testuser' with id 'testuser' can update a project under their profile.
     * @allow (delete) User 'testuser' with id 'testuser' can delete a project under their profile.
     * @deny (create) User 'otheruser' with id 'testuser' cannot create a project under their profile.
     * @deny (get) User 'otheruser' with id 'testuser' cannot read a project under their profile.
     * @deny (update) User 'otheruser' with id 'testuser' cannot update a project under their profile.
     * @deny (delete) User 'otheruser' with id 'testuser' cannot delete a project under their profile.
     * @principle Enforces document ownership for all operations on project documents.
     */
    match /users/{userId}/projects/{projectId} {
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId) && request.resource.data.userId == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.userId == resource.data.userId;
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Rules for venture documents.
     * @path /ventures/{ventureId}
     * @allow (get) Any user can read venture data.
     * @allow (list) Any user can list venture data.
     * @deny (create) No user can create venture data without specific authorization (TODO).
     * @deny (update) No user can update venture data without specific authorization (TODO).
     * @deny (delete) No user can delete venture data without specific authorization (TODO).
     * @principle Allows public read access to venture data, but restricts write access.
     */
    match /ventures/{ventureId} {
      allow get: if true;
      allow list: if true;
      allow create: if false; // TODO: Add role-based validation for venture creation.
      allow update: if false; // TODO: Add role-based validation for venture updates.
      allow delete: if false; // TODO: Add role-based validation for venture deletion.
    }
  }
}