rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isAdmin() {
      return request.auth.token.email IN ['chancellor@ichancetek.com', 'chanceminus@gmail.com'];
    }

    match /userStatus/{userId} {
      // Allow any authenticated user to write to their own status document
      allow write: if request.auth != null && request.auth.uid == userId;
      // Allow only admins to read any user's status
      allow read: if isAdmin();
    }

    match /auditLogs/{logId} {
      // Only admins can read audit logs
      allow read, write: if isAdmin();
    }

    match /contactFormSubmissions/{submissionId} {
        // Allow anyone to create, but only admins to read
        allow create: if true;
        allow read: if isAdmin();
    }

    // Default deny for any other collections to ensure security
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
