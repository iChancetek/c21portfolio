rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isAdmin() {
      return request.auth.token.email IN ['chancellor@ichancetek.com', 'chanceminus@gmail.com'];
    }

    match /userStatus/{userId} {
      allow write: if request.auth != null && request.auth.uid == userId;
      allow read, list: if isAdmin();
    }

    match /auditLogs/{logId} {
      allow read, write: if isAdmin();
    }

    match /contactFormSubmissions/{submissionId} {
        allow create: if true;
        allow read: if isAdmin();
    }
    
    match /userInteractions/{interactionId} {
      // Allow a user to create, read or write their own single interaction document
      allow create, read, write: if request.auth != null && request.auth.uid == request.resource.data.userId;
      
      // Allow users to list their own interactions
      allow list: if request.auth != null && request.query.where.get("userId") == request.auth.uid;
    }


    // Default deny for any other collections to ensure security
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
