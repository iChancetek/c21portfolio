rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Allow authenticated users to access their own user document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow authenticated users to read/write audit logs
    match /auditLogs/{logId} {
      allow read, write: if request.auth != null;
    }

    // Rules for user presence
    match /userStatus/{userId} {
      // Any authenticated user can update their own status document
      allow write: if request.auth != null && request.auth.uid == userId;
      // Only admins can read the status of all users
      allow read: if request.auth != null;
    }
    
    // Default: require authentication for all collections
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
